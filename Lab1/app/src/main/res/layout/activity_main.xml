            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintBottom_toTopOf="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:id="@+id/button7"
            android:onClick="step"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintBottom_toTopOf="@+id/button10" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button8"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:id="@+id/button8"
            android:onClick="step"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            app:layout_constraintBottom_toTopOf="@+id/button10" app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button9"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:id="@+id/button9"
            android:onClick="step"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintBottom_toTopOf="@+id/button10" app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:id="@+id/button2"
            android:onClick="step"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button3"/>
    <Button
            android:text="Start"
            android:layout_width="374dp"
            android:layout_height="49dp"
            android:id="@+id/button10" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" android:visibility="visible" android:onClick="gameStart"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.039"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
